<section>
  <div class="container">
    {{#if order}}
    <h6 class="text-secondary mt-3">Order ID - {{order._id}}</h6>
     {{#each products}}
        
        <div class="row mt-0 pt-0 border-primary mb-4 bg-light">
          
       <div class="card-body col-7">
            <h5 class="card-title">{{this.product.Name}}</h5><h6>({{this.product.Description}})</h6>
            <p></p>
            <h5>₹{{this.product.Price}}</h5>
            
          </div>
           <div class="card-img-top pt-4  col-5" style="width: 21rem;"> 
               <div class="ml-4 bg-light">
                    <img src="/product-images/{{this.product._id}}.jpg" class="card-img-top ml-auto" alt="" style="width:4rem;height:4rem;margin-left:5rem;">
                 </div>
             </div>
             </div>
             <div>
              
       <h6><i class="fa fa-circle" style="font-size:15px;color:green"></i> Ordered</h6>
       
       <h6><i class="fa fa-circle-o" style="font-size:15px;"></i> Packed</h6>
       <h6><i class="fa fa-circle-o" style="font-size:15px;"></i> Shipped</h6>
       <h6><i class="fa fa-circle-o" style="font-size:15px;"></i> Delivery</h6>
             </div>
      
       {{/each}}
        <div class="mt-5">
        <h6 class="text-secondary mt-3">Shipping Details</h6>
         <p class="mt-3">{{order.deliveryDetails.address}}</p>
         <h6 class="">Pincode - <span  style="font-size:14px;">{{order.deliveryDetails.pincode}}</span></h6>
          <h6 class="">Phone number - <span  style="font-size:14px;">{{order.deliveryDetails.mobile}}</span></h6>
        </div>
        <div class="mt-3">
        <h6 class="text-secondary mt-3">Price Details</h6>
        <p><i class="fa fa-circle" style="font-size:7px"></i> {{order.paymentMethod}} : ₹{{order.totalAmount}}</p>
        </div>
       {{/if}}
      
    </div>
    </section>